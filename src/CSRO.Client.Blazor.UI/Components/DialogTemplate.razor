@inherits DialogTemplateBase
<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
        @if (ShowEntry)
        {
            <MudTextField Class="mt-6" Label="Enter text: (min 4 char)"
                          @bind-Value="EnteredText"
                          For="@(() => EnteredText)"
                           />
        }
    </DialogContent>
    <DialogActions>
        @if (ShowCancel)
        {
            <MudButton OnClick="Cancel">Cancel</MudButton>
        }
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="Submit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>